{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "esnext",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "skipLibCheck": true,
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "esModuleInterop": true,
    "baseUrl": "src"
  },
  "include": ["src"]
}
